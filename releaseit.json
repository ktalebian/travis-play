{
    "git": {
        "tag": false,
        "requireCleanWorkingDir": false
    },
    "github": {
        "release": true
    },
    "hooks": {
        "after:bump": "auto-changelog -p"
    },
    "npm": {
        "publish": false,
        "ignoreVersion": true
    },
    "plugins": {
        "@release-it/keep-a-changelog": {
          "filename": "CHANGELOG.md",
          "strictLatest": false,
          "addVersionUrl": true
        }
    }
}