{
    "git": {
        "tag": false,
        "requireCleanWorkingDir": false
    },
    "github": {
        "release": true,
        "tokenRef": "GITHUB_AUTH",
        "changelog": "auto-changelog --unreleased-only --stdout --commit-limit false -u --template https://raw.githubusercontent.com/release-it/release-it/master/templates/changelog-compact.hbs"
    },
    "hooks": {
        "after:bump": "npx auto-changelog -p"
      },
    "npm": {
        "publish": false,
        "ignoreVersion": true
    },
    "plugins": {
        "release-it-lerna-changelog": {
          "infile": "CHANGELOG.md"
        }
    }
}