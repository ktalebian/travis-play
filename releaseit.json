{
    "git": {
        "tag": false,
        "requireCleanWorkingDir": false
    },
    "github": {
        "release": true,
        "tokenRef": "GITHUB_AUTH"
    },
    "hooks": {
        "after:bump": "auto-changelog -p"
    },
    "npm": {
        "publish": false,
        "ignoreVersion": true
    },
    "plugins": {
        "release-it-lerna-changelog": {
          "infile": "CHANGELOG.md"
        }
    }
}