{
    "git": {
        "tag": false,
        "requireCleanWorkingDir": false,
        "changelog": "npx auto-changelog --stdout --commit-limit false -u --handlebars-setup ./handlebar.js --template ./changelog.hb"
    },
    "github": {
        "release": true,
        "tokenRef": "GITHUB_AUTH"
    },
    "hooks": {
        "after:bump": "npx auto-changelog -v $(git describe --tags --abbrev=0 | cut -c 2-)"
    },
    "npm": {
        "publish": false,
        "ignoreVersion": true
    }
}