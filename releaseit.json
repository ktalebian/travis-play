{
    "git": {
        "tag": false,
        "requireCleanWorkingDir": false,
        "changelog": "git log --pretty=format:'* %s (%h)' [REV_RANGE]"
    },
    "github": {
        "release": true,
        "releaseName": "Release %s"
    },
    "hooks": {
        "after:bump": "auto-changelog -p"
    },
    "npm": {
        "publish": false,
        "ignoreVersion": true
    }
}